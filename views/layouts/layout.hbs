<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Conference Management</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <div class="container-fluid d-none d-lg-block">
    <div class="row align-items-center bg-white py-3 px-lg-5">
      <div class="col-lg-4">
        <a href="/" class="navbar-brand p-0 d-none d-lg-block">
          <h1 class="m-0 display-4 text-uppercase text-primary">Conference <span href="/" class="text-secondary font-weight-normal">Management </span></h1>
        </a>
      </div>
    </div>
  </div>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="#">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">User</a>
          </li>
        </ul>
        <ul class="navbar-nav ms-auto">
          <li class="nav-item d-none" id="welcomeMsg">
            <span class="navbar-text">Xin ch√†o, <span id="fullname" ></span></span>
          </li>
          <li class="nav-item d-none ms-3" id="logoutBtn">
            <button type="button" class="btn btn-danger">Logout</button>
          </li>
          <li class="nav-item" id="loginBtn">
            <button type="button" class="btn btn-primary me-2" href="/" data-bs-toggle="modal" data-bs-target="#loginModal">Login</button>
          </li>
          <li class="nav-item" id="createUserBtn">
            <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#createUserModal">Create User</button>
          </li>
        </ul>

      </div>
    </div>
  </nav>

  <!-- Create User Modal -->
  <div class="modal fade" id="createUserModal" tabindex="-1" aria-labelledby="createUserModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="createUserModalLabel">Create User</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="createUserForm" action="/user/register" method="post">
            <div class="mb-3">
              <label for="createUserName" class="form-label">Name</label>
              <input type="text" name="name" class="form-control" id="createUserName" required>
            </div>
            <div class="mb-3">
              <label for="createUserEmail" class="form-label">Email address</label>
              <input type="email" name="email" class="form-control" id="createUserEmail" required>
            </div>
            <div class="mb-3">
              <label for="createUserPassword" class="form-label">Password</label>
              <input type="password" name="password" class="form-control" id="createUserPassword" required>
            </div>
            <button type="submit" class="btn btn-primary">Create User</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Success Alert for User Creation -->
  <div id="successCreateUserAlert" class="alert alert-success alert-dismissible fade show mt-3" role="alert" style="display: none;">
    User created successfully!
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>

  <!-- Success Alert for Login -->
  <div id="successLoginAlert" class="alert alert-success alert-dismissible fade show mt-3" role="alert" style="display: none;">
    Logged in successfully!
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>

  <!-- Login Modal -->
  <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="loginModalLabel">Login</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="loginForm" action="/user/login" method="post">
            <div class="mb-3">
              <label for="loginEmail" class="form-label">Email</label>
              <input type="email" name="email" class="form-control" id="loginEmail" required>
            </div>
            <div class="mb-3">
              <label for="loginPassword" class="form-label">Password</label>
              <input type="password" name="password" class="form-control" id="loginPassword" required>
            </div>
            <button type="submit" class="btn btn-primary w-100">Login</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- JavaScript -->
  <script>
  // Wait for DOMContentLoaded event (page has been loaded)
  window.addEventListener('DOMContentLoaded', function() {
    const params = new URLSearchParams(window.location.search);
    const successCreateUser = params.get('successCreateUser');
    const successLogin = params.get('successLogin');
    const fullname = params.get('fullname');

    // Show success alert for user creation if parameter is present in URL
    if (successCreateUser === 'true') {
        document.getElementById('successCreateUserAlert').style.display = 'block';
    }

    // Show success alert for login if parameter is present in URL
    if (successLogin === 'true' && fullname) {
        document.getElementById('successLoginAlert').style.display = 'block';
        document.getElementById('loginBtn').classList.add('d-none');
        document.getElementById('createUserBtn').classList.add('d-none');
        document.getElementById('logoutBtn').classList.remove('d-none');
        document.getElementById('welcomeMsg').classList.remove('d-none');
        document.getElementById('fullname').textContent = fullname;
    }
  });

  // Logout button functionality
  document.getElementById('logoutBtn').addEventListener('click', function() {
    // Perform logout actions (e.g., clear session, redirect to login page, etc.)
    document.getElementById('loginBtn').classList.remove('d-none');
    document.getElementById('createUserBtn').classList.remove('d-none');
    document.getElementById('logoutBtn').classList.add('d-none');
    document.getElementById('welcomeMsg').classList.add('d-none');
  });
</script>


  <!-- Additional HTML content -->

  <!-- Conference Filter and Search -->

    <div class="container">
        <form id="filterForm" action="/" method="GET">
            <div class="row mb-4 align-items-end">
                <div class="col-md-4">
                    <label for="topicFilter" class="form-label">Filter by Topic</label>
                    <select class="form-select" id="topicFilter" name="topic">
                        <option value="">All Topics</option>
                        {{#each topics}}
                            <option value="{{id}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary mt-3">Filter</button>
                </div>
            </div>
        </form>
    </div>
    <div class="container">
    <form id="searchForm" action="/" method="GET">
        <div class="row mb-4 align-items-end">
            <div class="col-md-4">
                <label for="search" class="form-label">Search Conferences</label>
                <input type="text" class="form-control" id="search" name="keyword" placeholder="Enter conference name">
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary mt-3">Search</button>
            </div>
        </div>
    </form>
</div>
        
  </div>

  <div>
    {{{body}}}
  </div>

  <!-- Conference Table -->

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="scripts.js"></script>
</body>
</html>
